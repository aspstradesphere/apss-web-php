# Enable URL Rewriting
RewriteEngine On
# RewriteBase /

# Prevent directory listing
Options -Indexes

# Disable MultiViews to prevent Apache from guessing file extensions
Options -MultiViews

# If the request is for a real file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Otherwise, forward everything to index.php?page=$1
# The [QSA] flag appends any existing query string
RewriteRule ^(.+)$ index.php?page=$1 [QSA,L]

# Set default charset
AddDefaultCharset UTF-8

# Enable Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
